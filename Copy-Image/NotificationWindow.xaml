<Window x:Class="Copy_Image.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Copy_Image"
        mc:Ignorable="d"
        Title="Copy-Image"  Height="75" Width="300" WindowStyle="None" Opacity="0" Loaded="Window_Loaded" AllowsTransparency="True">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="2">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" FontWeight="Bold">Image copied to clipboard!</TextBlock>
        </Border>
    </Grid>
</Window>
